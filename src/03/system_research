#!/bin/bash
echo HOSTNAME = $(hostname)
echo TIMEZONE = $(timedatectl | grep "Time zone:" | awk 'sub(/Time zone: /, "")')
echo USER = $(whoami)
echo OS = $(hostnamectl | grep Operating | awk 'sub(/Operating System: /, "")')
echo DATE = $(date "+%d %b %Y %T")
echo UPTIME = $(uptime -p)
echo UPTIME_SEC = $(awk '{print $1}' /proc/uptime)
echo IP = $(ifconfig enp0s3 | grep -we inet | awk '{print $2}')
echo MASK = $(ifconfig enp0s3 | awk '/netmask/ {printf $4}')
echo GATEWAY = $(ip r | awk '/default/ {print $3}')
echo RAM_TOTAL = $(free -m | awk '/Mem:/ {printf("%.3f GB", $2 / 1024)}')
echo RAM_USED = $(free -m | awk '/Mem:/ {printf("%.3f GB", $3 / 1024)}')
echo RAM_FREE = $(free -m | awk '/Mem:/ {printf("%.3f GB", $4 / 1024)}')
echo SPACE_ROOT = $(df / | awk '/dev/ {printf "%.2f Mb", $2 / 1024}')
echo SPACE_ROOT_USED = $(df / | awk '/dev/ {printf "%.2f Mb", $3 / 1024}')
echo SPACE_ROOT_FREE = $(df / | awk '/dev/ {printf "%.2f Mb ", $4 / 1024}')
